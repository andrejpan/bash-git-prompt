
override_git_prompt_colors() {
  GIT_PROMPT_THEME_NAME="andrejpan"
  GIT_PROMPT_WITH_USERNAME_AND_REPO=0
  GIT_PROMPT_PREFIX="[${Blue}_USERNAME_REPO_"
  GIT_PROMPT_START_USER="_LAST_COMMAND_INDICATOR_${Time12a} ${BoldRed}${PathShort}${ResetColor}"
  GIT_PROMPT_END_USER=" \n${BoldBlue}${Time12a}${ResetColor} $ "
  GIT_PROMPT_END=" ${USER}@$HOSTNAME\n ${BoldBlack}λ${ResetColor} "
  GIT_PROMPT_SHOW_UPSTREAM=0
  GIT_PROMPT_STAGED="${Green} ✚ "
  GIT_PROMPT_CONFLICTS="${Red} ✖ "
  GIT_PROMPT_CHANGED="${Magenta} ◍ "
  GIT_PROMPT_UNTRACKED="${Cyan} ✭ "
  GIT_PROMPT_STASHED="${BoldBlue} ⚑ "
  GIT_PROMPT_CLEAN="${BoldGreen} clean "

  GIT_PROMPT_COMMAND_OK="${Green}✔ "
  GIT_PROMPT_COMMAND_FAIL="${Red}✘ "
}

reload_git_prompt_colors "andrejpan"
